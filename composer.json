{
  "name": "sanetchek/emptytheme",
  "type": "wordpress-theme",
  "version": "1.0.0",
  "description": "emptytheme starter theme with localization support.",
  "keywords": [
    "WordPress",
    "Theme",
    "Localization"
  ],
  "homepage": "https://github.com/Sanetchek/empty-theme",
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "Contributors",
      "homepage": "https://github.com/Sanetchek/empty-theme/graphs/contributors"
    }
  ],
  "require": {
    "php": ">=5.6"
  },
  "require-dev": {
    "wp-cli/i18n-command": "^2.2.5"
  },
  "scripts": {
    "make-pot": "vendor/bin/wp i18n make-pot . languages/emptytheme.pot",
    "dev": [
      "composer install",
      "npm install"
    ],
    "prod": [
      "npm run build",
      "composer make-pot",
      "composer install --no-dev --optimize-autoloader",
      "rm -rf node_modules package-lock.json vendor composer.lock"
    ]
  },
  "support": {
    "issues": "https://github.com/Sanetchek/empty-theme/issues",
    "source": "https://github.com/Sanetchek/empty-theme"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": false
    }
  }
}
